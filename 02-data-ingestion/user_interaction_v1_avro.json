{
    "type": "record",
    "name": "UserInteractionSchema",
    "namespace": "com.appstore.events",
    "doc": "Defines the structure for a user interaction event in the AppStore simulation.",
    "fields": [
        {
            "name": "generation_timestamp",
            "type": {
              "type": "long",
              "logicalType": "timestamp-micros"
            },
            "doc": "Unix timestamp (microseconds since epoch) when the event was generated by the publisher."
        },
        {
            "name": "event_id",
            "type": "string",
            "doc": "Unique identifier for the event (UUID format)."
        },
        {
            "name": "event_timestamp",
            "type": {
              "type": "long",
              "logicalType": "timestamp-micros"
            },
            "doc": "Unix timestamp (microseconds since epoch) of when the event occurred in the user's timezone."
        },
        {
            "name": "user_id",
            "type": "string",
            "doc": "Identifier for the user."
        },
        {
            "name": "session_id",
            "type": "string",
            "doc": "Identifier for the user's session."
        },
        {
            "name": "event_type",
            "type": {
                "type": "enum",
                "name": "EventType",
                "symbols": [
                    "app_open",
                    "app_close",
                    "search",
                    "app_install",
                    "app_uninstall",
                    "review_submit",
                    "in_app_purchase"
                ]
            },
            "doc": "The type of interaction."
        },
        {
            "name": "app_id",
            "type": "string",
            "doc": "Identifier for the application."
        },
        {
            "name": "device_type",
            "type": {
                "type": "enum",
                "name": "DeviceType",
                "symbols": [
                    "phone",
                    "tablet",
                    "desktop"
                ]
            },
            "doc": "User's device type."
        },
        {
            "name": "os_version",
            "type": "string",
            "doc": "Operating system version, e.g., 'iOS 17.1' or 'Android 14'."
        },
        {
            "name": "country_code",
            "type": "string",
            "doc": "Three-letter country code, e.g., 'IND', 'CHN', 'IRN'."
        },
        {
            "name": "event_details",
            "type": "string",
            "doc": "A JSON string representing event-specific data."
        }
    ]
}